  "type": "business_id",
  "value_type": "business_id_numeric",
  "confidence": "high",
  "correlation_found": true,
  "source": {
    "step_number": 4,
    "step_label": "Step 4: Navigate to the Products page.",
    "request_url": "https://api.example.com/catalog/products/list",
