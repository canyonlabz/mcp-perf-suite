{
  "schema_version": "1.0",
  "environments": {
    "QA": {
      "env_tag": "qa",
      "metadata": {
        "platform": "Linux",
        "cpus": 4,
        "memory": "16GB",
        "description": "QA environment for web/app/db tier"
      },
      "tags": ["team:qa"],
      "services": [
        {"service_name": "serviceA", "type": "web"},
        {"service_name": "serviceB", "type": "app"},
        {"service_name": "serviceC", "type": "db"}
      ],
      "hosts": [
        {"hostname": "qa-web-01"},
        {"hostname": "qa-app-01"},
        {"hostname": "qa-db-01"}
      ],
      "kubernetes": {
        "services": [
          {
            "service_filter": "*products*",
            "description": "Products microservices"
          },
          {
            "service_filter": "*auth*", 
            "description": "Authentication services"
          }
        ]
      }
    }
  }
}
